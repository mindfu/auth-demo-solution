extends layout

block content
  h1 Add New User
  if errors
    each error, i in errors
        div.alert.alert-danger #{error.msg || error.message}

  form.form-horizontal(action='/users/create', method='post', enctype='multipart/form-data')
    .form-group
      label.col-sm-2.control-label(for='name') Name:
      .col-sm-10
        input.form-control(type='text', name='name', id='name', value=user.name, required)

    .form-group
      label.col-sm-2.control-label(for='username') Username:
      .col-sm-10
        input.form-control(type='text', name='username', id='username', value=user.uname, required)

    .form-group
        label.col-sm-2.control-label Password
        .col-sm-10
            input.form-control(name='password',type='password',placeholder='Enter your password',id='password',value='', required)

    .form-group
        label.col-sm-2.control-label Confirm Password
        .col-sm-10
          input.form-control(name='cpassword',type='password',placeholder='Confirm password',id='cpassword', required)

    .form-group
      label.col-sm-2.control-label(for='email') Email:
      .col-sm-10
        input.form-control(type='email', name='email', id='email', value=user.email, required)

    .form-group
      label.col-sm-2.control-label(for='profileimage') Profile Image:
      .col-sm-10
        input.form-control(type='file', name='profileimage', id='profileimage', value=user.profileimage)

    .form-group
      label.col-sm-2.control-label(for='contact') Contact:
      .col-sm-10
        input.form-control(type='text', name='contact', id='contact', value=user.contact)

    .form-group
      label.col-sm-2.control-label(for='role') Role:
      .col-sm-10
        select.form-control(name='role', id='role', required)
          option(value='user', selected=user.role==='user') User
          option(value='admin', selected=user.role==='admin') Administrator

    .form-group
      .col-sm-offset-2.col-sm-10
        button.btn.btn-primary(type='submit') Save
